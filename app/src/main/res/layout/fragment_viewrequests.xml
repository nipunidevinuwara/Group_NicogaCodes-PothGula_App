<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewrequestsFragment">
    <LinearLayout
        android:id="@+id/tv_autjor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".adminUpload">

        <TextView
            android:id="@+id/tv_viewdonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"

            android:text="@string/viewrequests"
            android:textAlignment="center"
            android:textColor="#5c2c9c"

            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/donationicon"
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/ic_baseline_new_releases_24" />

        <TextView
            android:id="@+id/tv_streamrequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"

            android:text="@string/et_uploadStream"
            android:textColor="#5c2c9c"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:entries="@array/stream"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tv_donationamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"

            android:text="@string/tv_subject"
            android:textColor="#5c2c9c"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:entries="@array/subject"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/filtericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:src="@drawable/ic_baseline_filter_alt_24" />

            <Button
                android:id="@+id/btn_filter"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#B17CDF"
                android:gravity="center"
                android:text="@string/donationFilter" />
        </LinearLayout>

    </LinearLayout>



</FrameLayout>