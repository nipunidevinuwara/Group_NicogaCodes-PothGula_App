<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundimglogo">

    <TextView
        android:id="@+id/tv_homepageheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="400dp"
        android:layout_marginTop="16dp"
        android:text="Welcome to Admin View"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonAddAdmin"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#B17CDF"
            android:text="Add Admin" />

        <Button
            android:id="@+id/buttonAddPDF"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#B17CDF"
            android:text="Upload PP" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonAddBooks"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="210dp"
            android:backgroundTint="#B17CDF"
            android:text="Upload Books" />

        <Button
            android:id="@+id/buttonViewRequests"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="210dp"
            android:backgroundTint="#B17CDF"
            android:text="View Requests" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonViewDonations"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="320dp"
            android:backgroundTint="#B17CDF"
            android:text="View Donations" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>