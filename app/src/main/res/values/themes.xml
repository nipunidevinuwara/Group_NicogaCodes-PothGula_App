<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PothGula" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c4</item>
        <item name="colorPrimaryVariant">@color/c2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/c5</item>
        <item name="colorSecondaryVariant">@color/c2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonGray">
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPurple">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/c4</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Buttonpurple1">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/c4</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/c3</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/c4</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subTitle2">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/c4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="startIconTint">@color/c4</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>